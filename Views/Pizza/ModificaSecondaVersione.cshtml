@{
    Layout = "_Layout";
    ViewData["Title"] = "Modifica Pizza";
}

@model la_mia_pizzeria_static.Models.Pizza


<form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <table cellpadding="0" cellspacing="0" class="center">
        <tr>
            <th colspan="2" align="center">Dettagli pizza</th>
        </tr>
        <tr>
            <td>Id: </td>
            <td>
               <input asp-for=Id />
               <span asp-validation-for="Id"></span>
            </td>
        </tr>
        <tr>
            <td>Nome: </td>
            <td>
               <input asp-for=Nome />
               <span asp-validation-for="Nome"></span>
            </td>
        </tr>

        <tr>
            <td>Descrizione: </td>
            <td>
                <input asp-for=Descrizione />
               <span asp-validation-for="Descrizione"></span>
            </td>
        </tr>

        <tr>
            <td>Foto: </td>
            <td>
                <input asp-for=File />
               <span asp-validation-for="File"></span>
            </td>
        </tr>
        <tr>
            <td>Prezzo: </td>
            <td>
                 <input asp-for=Prezzo />
                 <span asp-validation-for="Prezzo"></span>
            </td>
        </tr>

        <tr>
            <td></td>
            <td><input type="submit" value="Submit" /></td>
        </tr>
    </table>

</form> 